{
  "name": "review-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start --hostname ::",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf .next out",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "lint:all": "npm run lint && npm run type-check",
    "test": "npm run test:node",
    "test:node": "vitest run --passWithNoTests",
    "test:node:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "precommit:test": "npm run type-check && npm run test:coverage",
    "validate:toml": "tsx scripts/validate-toml.ts",
    "migrate:content": "tsx scripts/migrate-content-to-supabase.ts",
    "drafts:upload": "tsx scripts/upload-drafts.ts"
  },
  "description": "Web-based review interface for content management with integrated translation and audio processing pipeline",
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google-cloud/translate": "^9.3.0",
    "@octokit/rest": "^22.0.1",
    "@supabase/supabase-js": "^2.48.1",
    "@tanstack/react-query": "^5.90.10",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "lucide-react": "^0.554.0",
    "next": "16.0.10",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.2.9",
    "prettier": "^3.6.2",
    "tsx": "^4.21.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
